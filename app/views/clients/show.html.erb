    <th>Peso</th>
  </thead>

  <% @client.pets.each do |ph|%>
  <tbody>
    <td><%= ph.name%></td>
    <td><%= ph.pet_histories.last.height%></td> 
    <td><%= ph.pet_histories.last.weight%></td> 
  </tbody>

  <%end%>
</table>
 
</table>
