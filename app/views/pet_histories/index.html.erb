<p id="notice"><%= notice %></p>

<h1>Historial de Mascotas</h1>

<table class="table table-bordered">
  <thead class="bg-success">
    <tr>
      <th>Fecha</th>
      <th>Peso</th>
      <th>Altura</th>
      <th>Diagnostico</th>
      <th>Mascota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
      <td><%= pet_history.created_at %></td>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.height %></td>
        <td><%= pet_history.diagnosis %></td>
        <td><%= pet_history.pet %></td>
        <td><%= link_to 'Show', pet_history, class:"badge badge-success text-light" %></td>
        <td><%= link_to 'Edit', edit_pet_history_path(pet_history), class:"badge badge-success text-light" %></td>
        <td><%= link_to 'Destroy', pet_history, method: :delete, data: { confirm: 'Are you sure?' }, class:"badge badge-success text-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_pet_history_path, class:"btn btn-success text-light mb-5" %>
